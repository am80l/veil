{
  "name": "@squadzero/veil",
  "version": "0.6.4",
  "type": "module",
  "description": "A TypeScript library for selective context access, visibility control & safety enforcement for LLMs",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint ./src && eslint ./src",
    "lint:biome": "biome lint ./src",
    "lint:eslint": "eslint ./src",
    "lint:fix": "biome lint --write ./src && eslint ./src --fix",
    "format": "biome format --write ./src",
    "format:check": "biome format ./src",
    "check": "biome check ./src && npm run typecheck",
    "prepublishOnly": "npm run build",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.ts": [
      "biome check --write",
      "eslint --fix"
    ]
  },
  "bin": {
    "veil": "dist/cli/index.cjs",
    "veil-mcp": "dist/mcp/index.cjs",
    "veil-wrap": "dist/cli/wrap.cjs"
  },
  "keywords": [
    "llm",
    "ai",
    "security",
    "visibility",
    "context",
    "guardrails",
    "typescript",
    "mcp",
    "model-context-protocol"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Squad-Zero/veil.git"
  },
  "homepage": "https://github.com/Squad-Zero/veil#readme",
  "bugs": {
    "url": "https://github.com/Squad-Zero/veil/issues"
  },
  "sideEffects": false,
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "@eslint/js": "9.39.2",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "8.50.0",
    "@typescript-eslint/parser": "8.50.0",
    "@vitest/coverage-v8": "2.1.9",
    "eslint": "9.39.2",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "tsdown": "0.18.1",
    "typescript": "^5.6.0",
    "typescript-eslint": "8.50.0",
    "vitest": "^2.1.0"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.25.1",
    "commander": "14.0.2",
    "zod": "4.2.1"
  }
}
